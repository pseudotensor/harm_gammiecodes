double frho(double R)
{
	double Rout,Rin,dR,rmax,rmin ;

	/*
	rmax = 1.e-2 ;
	rmin = 1.e-4 ;
	*/
	rmax = 1.e-2 ;
	rmin = 1.e-4 ;
	Rout = 0.8 ;
	Rin = 0.8 ;
	dR = (Rout - Rin) ;
	
	if(R > Rout) return(rmin) ;
	if(R < Rin) return(rmax) ;
	else {
		return( exp(
			log(rmax)*(Rout - R)/dR +
			log(rmin)*(R - Rin)/dR)) ;
	}
}
double fp(double R) 
{
	double Rout,Rin,dR,pmin,pmax ;

	/*
	pmin = 3.e-5 ;
	pmax = 1. ;
	*/
	pmin = 1.e-2 ;
	pmax = 1. ;
	Rout = 0.8 ;
	Rin = 0.8 ;
	dR = (Rout - Rin) ;

	if(R > Rout) return(pmin) ;
	else if(R < Rin) return(pmax) ;
	else {
		return( exp(
			log(pmax)*(Rout - R)/dR +
			log(pmin)*(R - Rin)/dR)) ;
	}

}
